<Window x:Class="EmailViewer.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="350" Width="300">
    <StackPanel Margin="20">
        <TextBlock Text="Welcome back!" FontWeight="Bold" FontSize="18" Margin="0,0,0,20" HorizontalAlignment="Center"/>
        <TextBlock Text="Email:" Margin="0,0,0,5"/>
        <TextBox x:Name="EmailTextBox" Margin="0,0,0,15"/>
        <TextBlock Text="Password:" Margin="0,0,0,5"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,0,0,15"/>
        <CheckBox x:Name="RememberMeCheckBox" Content="Remember Me" Margin="0,0,0,15"/>
        <Button Content="Login" Click="LoginButton_Click" Margin="0,0,0,10" Padding="5,3"/>
        <Button Content="Login with Google" Click="GoogleLoginButton_Click" Margin="0,0,0,10" Padding="5,3"/>
        <Button Content="Register" Click="RegisterButton_Click" Padding="5,3"/>
    </StackPanel>
</Window>