<Window x:Class="EmailViewer.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Profile" Height="400" Width="350">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="User Profile" FontWeight="Bold" FontSize="18" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <TextBlock Text="Email:" Margin="0,0,0,5"/>
            <TextBox x:Name="EmailTextBox" IsReadOnly="True" Margin="0,0,0,15"/>
            <TextBlock Text="OneDrive Root Path:" Margin="0,0,0,5"/>
            <TextBox x:Name="OneDrivePathTextBox" Margin="0,0,0,15"/>
            <TextBlock Text="Default Root Path:" Margin="0,0,0,5"/>
            <TextBox x:Name="DefaultRootPathTextBox" Margin="0,0,0,15"/>
            <TextBlock Text="ClickUp Workspace ID:" Margin="0,0,0,5"/>
            <TextBox x:Name="ClickUpWorkspaceIdTextBox" Margin="0,0,0,15"/>
            <Button Content="Save Changes" Click="SaveButton_Click" Padding="10,5" HorizontalAlignment="Right"/>
        </StackPanel>
    </ScrollViewer>
</Window>