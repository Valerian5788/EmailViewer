<Window x:Class="EmailViewer.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Profile" Height="400" Width="300">
    <StackPanel Margin="20">
        <TextBlock Text="Email:" Margin="0,0,0,5"/>
        <TextBox x:Name="EmailTextBox" IsReadOnly="True" Margin="0,0,0,10"/>
        <TextBlock Text="OneDrive Root Path:" Margin="0,0,0,5"/>
        <TextBox x:Name="OneDrivePathTextBox" Margin="0,0,0,10"/>
        <TextBlock Text="Default Root Path:" Margin="0,0,0,5"/>
        <TextBox x:Name="DefaultRootPathTextBox" Margin="0,0,0,10"/>
        <TextBlock Text="ClickUp API Key:" Margin="0,0,0,5"/>
        <TextBox x:Name="ClickUpApiKeyTextBox" Margin="0,0,0,10"/>
        <TextBlock Text="ClickUp List ID:" Margin="0,0,0,5"/>
        <TextBox x:Name="ClickUpListIdTextBox" Margin="0,0,0,10"/>
        <TextBlock Text="ClickUp User ID:" Margin="0,0,0,5"/>
        <TextBox x:Name="ClickUpUserIdTextBox" Margin="0,0,0,10"/>
        <Button Content="Save Changes" Click="SaveButton_Click"/>
    </StackPanel>
</Window>