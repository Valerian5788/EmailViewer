<Window x:Class="EmailViewer.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="350" Width="300">
    <StackPanel Margin="20">
        <TextBlock Text="Create an Account" FontWeight="Bold" FontSize="18" Margin="0,0,0,20" HorizontalAlignment="Center"/>
        <TextBlock Text="Email:" Margin="0,0,0,5"/>
        <TextBox x:Name="EmailTextBox" Margin="0,0,0,15"/>
        <TextBlock Text="Password:" Margin="0,0,0,5"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,0,0,15"/>
        <TextBlock Text="Confirm Password:" Margin="0,0,0,5"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,20"/>
        <Button Content="Register" Click="RegisterButton_Click" Padding="10,5" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>