<Window x:Class="EmailViewer.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="300" Width="300">
    <StackPanel Margin="20">
        <TextBlock Text="Email:" Margin="0,0,0,5"/>
        <TextBox x:Name="EmailTextBox" Margin="0,0,0,10"/>
        <TextBlock Text="Password:" Margin="0,0,0,5"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>
        <TextBlock Text="Confirm Password:" Margin="0,0,0,5"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,10"/>
        <Button Content="Register" Click="RegisterButton_Click"/>
    </StackPanel>
</Window>
